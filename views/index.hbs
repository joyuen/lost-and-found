{{#> layout}}
{{#*inline "head"}}
<link rel="stylesheet" href="/css/index.css">
<script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/ejs@3.0.2/ejs.min.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
{{/inline}}

{{#*inline "content"}}
<div class="flex" id="container">
  <div class="flex">
    <div id="notifs-bar">
      <div id="notifs-header">
        <h3>Notifications</h3>
        <button id="notif-remove-all" class="pseudo">Remove All</button>
      </div>
      <div id="notifs-table" class="flex three">
        {{!-- notifications go in here --}}
      </div>
    </div>
  </div>
  <div>
    <footer class="flex" id="stats">
      <div><span>Number of Items Lost: {{countlost}}</span></div>
      <div><span>Number of Items Found: {{countfound}}</span></div>
      <div><span>Number of Items Returned: {{countreturned}}</span></div>
      <div><span>Number of Items Stolen: {{countstolen}}</span></div>
    </footer>
  </div>  
</div>

<script type="text/javascript" src="js/index.js"></script>
{{/inline}}
{{/layout}}